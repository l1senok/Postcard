<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="blare.alex.postcard.Main2Activity"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.5"
        android:background="#000000">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:text="@string/value"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:text="0"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_weight="0.5"
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/val_saturation"            />

    </LinearLayout>

    <SeekBar
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:id="@+id/seekBar"
        android:layout_weight="0.7"
        android:background="#000000" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:id="@+id/edit_image"
            android:src="@drawable/image_1"
            android:background="#000000"
            android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="#000000"
        android:padding="6dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="back"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:text="@string/name_style"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_weight="8"
            android:id="@+id/name_filter"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/right_arrow"
            android:onClick="go_next"
            />


    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/horizontal_view_main"
        android:background="#000000"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#000000">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/but1"
                android:onClick="filter_1"
                android:src="@drawable/template_1"
                android:scaleType="fitCenter"
                android:background="#000000"
                />
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/but2"
                android:onClick="filter_2"
                android:src="@drawable/template_2"
                android:scaleType="fitCenter"
                android:background="#000000"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/but3"
                android:onClick="filter_3"
                android:src="@drawable/template_3"
                android:scaleType="fitCenter"
                android:background="#000000"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/but4"
                android:onClick="filter_4"
                android:src="@drawable/template_4"
                android:scaleType="fitCenter"
                android:background="#000000"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/but5"
                android:onClick="filter_5"
                android:src="@drawable/template_5"
                android:scaleType="fitCenter"
                android:background="#000000"/>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>